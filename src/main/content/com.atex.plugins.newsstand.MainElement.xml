<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <!--This file contains input template definitions -->
  <input-template name="com.atex.plugins.newsstand.MainElement" label="com.atex.plugins.newsstand.MainElement">
    <policy>com.atex.plugins.newsstand.NewsstandPolicy</policy>
    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>

    <editor contextName="orchid_TOCENTRY">com.polopoly.siteengine.standard.contentlist.OContentListEntryBasePolicyWidget</editor>
    <viewer contextName="orchid_TOCENTRY">com.polopoly.siteengine.standard.contentlist.OContentListEntryBasePolicyWidget</viewer>
    <type>LayoutElement</type>
    <param name="renderTemplateIconInSelect">false</param>

    <param name="ViewState_insert">false</param>
    <param name="ViewState_refresh">true</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditState_saveAndEdit">false</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">false</param>
    <param name="EditNewState_saveAndFastInsert">true</param>
    <param name="EditNewState_saveAndView">false</param>

    <field name="name" input-template="p.ContentName" label="com.atex.plugins.newsstand.MainElement.name" required="true">
      <param name="inlineHelp">true</param>
    </field>

    <field name="showCatalogs" input-template="p.TextInput" label="com.atex.plugins.newsstand.MainElement.showCatalogs">
    </field>

    <field name="showNewspapers" input-template="p.Checkbox" label="com.atex.plugins.newsstand.MainElement.showNewspapers">
      <param name="checked">true</param>
    </field>
    <field name="showMagazines" input-template="p.Checkbox" label="com.atex.plugins.newsstand.MainElement.showMagazines">
      <param name="checked">true</param>
    </field>
    <field name="showSeasonals" input-template="p.Checkbox" label="com.atex.plugins.newsstand.MainElement.showSeasonals">
      <param name="checked">true</param>
    </field>
    <field name="showSpecials" input-template="p.Checkbox" label="com.atex.plugins.newsstand.MainElement.showSpecials">
      <param name="checked">true</param>
    </field>

    <output-templates mode="www">
      <id>com.atex.plugins.newsstand.MainElement.ot</id>
    </output-templates>

  </input-template>
</template-definition>
